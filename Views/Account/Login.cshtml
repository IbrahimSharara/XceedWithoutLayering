@model LoginViewModel
@{
    ViewData["Title"] = "Signin";
    Layout = "~/Views/Shared/_LoginAndRegister.cshtml";
}

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form asp-action="Login">
                    
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" id="form1Example13" class="form-control form-control-lg" asp-for="Email" />
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <label class="form-label" for="form1Example13">Email address</label>
                        <br />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" id="form1Example23" class="form-control form-control-lg" asp-for="PassWord" />
                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                        <label class="form-label" for="form1Example23">Password</label>
                        <br />
                        <span asp-validation-for="PassWord" class="text-danger"></span>
                    </div>

                    @*<div class="d-flex justify-content-around align-items-center mb-4">*@
                    <div class="d-flex mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="form1Example3" />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        
                        @* <a href="#!">Forgot password?</a>*@
                    </div>
                    <div class="text-danger mb-3" asp-validation-summary="All"></div>
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>

                    <div class=" d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">Don't have  ?</p>
                        <a asp-action="AddNewAccount" class="btn btn-primary">Register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>