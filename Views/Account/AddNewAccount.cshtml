@model UserViewModel
@{
    ViewData["Title"] = "AddNewAccount";
    Layout = "~/Views/Shared/_LoginAndRegister.cshtml";
}

<section style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                                <form class="mx-1 mx-md-4" asp-action="AddNewAccount" asp-controller="Account" enctype="multipart/form-data" method="post">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="form3Example1c" class="form-control" asp-for="Name" />
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <label class="form-label" for="form3Example1c">Your Name</label>
                                            <br />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="email" id="form3Example3c" class="form-control" asp-for="Email" />
                                            <i class="fa-solid fa-envelope"></i>
                                            <label class="form-label" for="form3Example3c">Your Email</label>
                                            <br />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" id="form3Example4c" class="form-control" asp-for="PassWord" />
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <label class="form-label" for="form3Example4c">Password</label>
                                            <br />
                                            <span asp-validation-for="PassWord" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" id="form3Example4cd" class="form-control" asp-for="ConfirmPassword" />
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <label class="form-label" for="form3Example4cd">Repeat your password</label>
                                            <br />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="tel" id="form6Example3c" class="form-control" asp-for="Phone" />
                                            <i class="fa-solid fa-envelope"></i>
                                            <label class="form-label" for="form6Example3c">Your Phone</label>
                                            <br />
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="form5Example4cd" class="form-control" asp-for="Address" />
                                            <i class="fa-solid fa-map-location"></i>
                                            <label class="form-label" for="form5Example4cd">Address</label>
                                            <br />
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="text-danger" asp-validation-summary="All"></div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <input type="submit" class="btn btn-primary btn-lg" value="Register">
                                    </div>
                                    <div class=" d-flex align-items-center my-4">
                                        <p class="text-center fw-bold mx-3 mb-0 text-muted">Do you have Account ?</p>
                                        <a asp-action="Login" class="btn btn-primary">Login</a>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
